<ul>
  <li class="mb-4">
    <h2 class="text-2xl text-gray-700 font-bold">
      <%= @order.shop.title %>
    </h2>
    <p class="flex items-center">
      <span class="text-gray-500 mr-1"><%= @order.shop.city %><%= @order.shop.district %></span>
      <%= link_to "TEL:#{@order.shop.tel}", "tel:#{@order.shop.tel}", class: 'text-xs badge badge-accent badge-outline' %>
    </p>
  </li>
  <li class="text-m order_text tracking-wide">
    <div class="text-gray-500">
      <%= @order.shop.description %>
    </div>
  </li>
</ul>
