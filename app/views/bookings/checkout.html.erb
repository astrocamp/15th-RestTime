<div class="grid grid-cols-2 gap-4 mt-8">
  <div>
    <div class="card w-full bg-white-100 shadow-xl">
      <div class="card-body gap-4">
        <div class="card-title"><%= t('order.booking info') %></div>
        <div class="flex justify-between">
          <span><%= booking_product.title %><%= booking_product.service_min %><%= t('order.min') %></span>
          <span><%= t('order.currency') %> <%= booking_product.price.to_i %></span>
        </div>
        <table class="table text-center">
          <thead>
            <tr class="border-2 border-gray-500">
              <th><%= t('order.booking date') %></th>
              <th><%= t('order.booking start time') %></th>
              <th><%= t('order.booking end time') %></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= format_date(current_booking.service_date) %></td>
              <td><%= format_time_without_sec(current_booking.service_date) %></td>
              <td><%= booking_end_time(current_booking) %></td>
            </tr>
          </tbody>
        </table>
        <div class="flex justify-between border-2  border-gray-500 p-4">
          <span>總計：</span>
          <span><%= t('order.currency') %> <%= booking_product.price.to_i %></span>
        </div>        
      </div>
    </div>
    <%= render 'bookings/form', order: @order%>
  </div>
  <div>
    <div class="card w-full bg-white-100 shadow-xl">
      <% if booking_shop.cover.attached? %>
        <figure><%= image_tag booking_shop.cover, class: "w-full h-[300px]" %></figure>
      <% else %>
        <figure><img src="https://fakeimg.pl/1000x300/200" class="w-full h-[300px]"></figure>
      <% end %>
      <div class="card-body gap-4">
        <div class="card-title">
            <p><%= booking_shop.title %></p>
            <span><%= booking_product.title %><%= booking_product.service_min %><%= t('order.min') %></span>
        </div>
      </div>
    </div>
  </div>
</div>