<div class="container m-auto my-10">
    <p class="text-2xl font-semibold text-primary text-center m-7 md: text-start"><%= t('like.shops') %></p>
    <div class="mb-3 text-center">
      <hr class="border-2 my-4 ">
      <div class="grid grid-cols-1 gap-3 md:grid-cols-2 lg:grid-cols-4">
        <% if @shops.present? %>
          <%= render "like_shops/shop", shops: @shops %>
        <% else %>
          <div>
            <span class="text-lg"><%=t('like.no_shop')%></span>
          </div>
        <% end %>
      </div>
    </div>
</div>

<section class="m-6">
  <%= paginate @shops %>
</section>