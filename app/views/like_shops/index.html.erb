<div class="container m-auto my-10">
  <div>
    <h3 class="text-2xl text-primary mt-10"><%= t('like.shops') %></h3>
    <hr class="border-2 my-4 ">
    <div class="grid grid-cols-1 gap-3 md:grid-cols-2 lg:grid-cols-2 xl:grid-cols-3">
      <% if @shops.present? %>
        <%= render "like_shops/shop", shops: @shops %>
      <% else %>
        <div>
          <span class="text-lg"><%=t('like.no_shop')%></span>
        </div>
      <% end %>
    </div>
  </div>
</div>

<section class="m-6">
  <%= paginate @shops %>
</section>