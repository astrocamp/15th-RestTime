<%= form_with model: @shop, url: vendor_index_path, local: true, html: { class: 'max-w-md p-4' } do |f| %>
  <div class="flex flex-col gap-4">
    <%= f.label :status, t('form.shop.status'), class: 'block text-sm font-medium text-gray-700' %>
    <%= f.select :status, Shop.statuses.keys.map { |status| [t("shop_status.#{status}"), status] },
                  {}, class: 'input input-bordered w-full max-w-xs' %>
    <%= f.submit t('helpers.submit.shop.update_status'), class: 'btn btn-accent' %>
  </div>
<% end %>