<div class="card sm:w-80 h-80 m-auto md:w-72 shadow-xl bg-slate-50">
  <%= link_to shop_path(shop) do %>
    <figure class="h-44 w-90 rounded-t-xl">
      <%= shop_cover(shop, :thumb) %>
    </figure>
  <% end %>

  <div class="card-body">
    <h2 class="card-title">
      <%= link_to shop.title, shop_path(shop), class: 'hover:text-primary' %>
      <div class="badge badge-neutral"><%= shop.city %></div>
    
    </h2>
    <div class="rating mt-2">
      <input type="radio" name="rating-2" class="mask mask-star-2 bg-orange-400 px-5" />
      <%= link_to shop_path(shop) do %>
        <%= shop.average_rating %>
        <span>(<%= shop.comments.count %>)</span>
      <% end %>
    </div>

    <div class="card-actions justify-end mt-[-40px]">
      <% if user_signed_in? %>
        <%= render 'like_shops', shop: shop %>
      <% end %>
    </div>
  </div>
</div>