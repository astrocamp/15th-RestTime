<ul>
  <li class="mb-4">
    <h2 class="text-2xl text-gray-700 font-bold">
      <%= @shop.title %>
    </h2>
    <p class="flex items-center">
      <span class="text-gray-500 mr-1"><%= @shop.city %><%= @shop.district %></span>
      <%= link_to "TEL:#{@shop.tel}", "tel:#{@shop.tel}", class: 'text-xs badge badge-accent badge-outline' %>
    </p>
  </li>
  <li class="text-m order_text tracking-wide">
    <div class="text-gray-500">
      <%= @shop.description %>
    </div>
  </li>
</ul>
