<div class="mb-40">
  <h2 class="m-5 text-xl text-center"><%=t('vendor.my_order_calendar')%></h2>
  <div class="text-center grid grid-cols-1 w-1/2 m-auto gap-x-2 md:grid-cols-4">
    <span class="bg-blue-400 text-white rounded p-1  text-sm mb-1 whitespace-nowrap"><%=t('order.ordered')%></span>
    <span class="bg-yellow-800 text-white rounded p-1 text-sm mb-1  whitespace-nowrap"><%=t('order.paid')%></span>
    <span class="bg-slate-500 text-white rounded p-1 text-sm mb-1  whitespace-nowrap"><%=t('order.completed')%></span>
    <span class="bg-red-500 text-white rounded p-1 text-sm mb-1  whitespace-nowrap"><%=t('order.cancelled')%></span>
  </div>

  <%= month_calendar(events: @orders) do |date, orders| %>
    <div class="flex flex-col h-40 w-fit mx-auto overflow-auto">
      <div class="top h-5 w-fit">
        <span class="text-gray-500">
          <%= date.strftime('%m/%d') %>
        </span>
      </div>

      <% orders.each do |order| %>
        <div class="bottom flex-grow py-1 w-full cursor-pointer overflow-visible">
          <div class="<%= tag_color(order) %>">
            <%= link_to "#{order.service_date.strftime('%k:%M')} - #{order.end_time.strftime('%k:%M')} #{order.booked_email}", vendor_order_path(order) %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
