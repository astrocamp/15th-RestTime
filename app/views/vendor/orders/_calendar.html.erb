<div class="mb-40">
  <div class="text-center">
    <h2 class="m-5 text-xl"><%=t('vendor.my_order_calendar')%></h2>
    <span class="bg-blue-400 text-white rounded p-1 text-sm mb-1"><%=t('order.ordered')%></span>
    <span class="bg-yellow-400 text-white rounded p-1 text-sm mb-1"><%=t('order.paid')%></span>
    <span class="bg-red-500 text-white rounded p-1 text-sm mb-1"><%=t('order.cancelled')%></span>
  </div>

  <%= month_calendar(events: @orders) do |date, orders| %>
    <div class="flex flex-col h-40 mx-auto xl:w-40 lg:w-30 md:w-30 sm:w-full w-10 mx-auto overflow-auto">
      <div class="top h-5 w-full">
        <span class="text-gray-500">
          <%= date.strftime('%m/%d') %>
        </span>
      </div>

      <% orders.each do |order| %>
        <div class="bottom flex-grow py-1 w-full cursor-pointer overflow-visible">
          <div class="<%= tag_color(order) %>">
            <%= link_to "#{order.service_date.strftime('%k:%M')} - #{order.end_time.strftime('%k:%M')} #{order.booked_email}", order %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
