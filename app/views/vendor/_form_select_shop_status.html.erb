<%= form_with model: @shop, local: true, html: { class: 'max-w-md p-4' } do |f| %>
  <div class="flex mb-4">
    <%= f.label :status, t('form.shop.status'), class: 'block text-gray-700 text-xl font-bold mr-2' %>
    <%= f.select :status, Shop.statuses.keys.map { |status| [t("shop_status.#{status}"), status] },
                  class: 'block appearance-none bg-white border border-gray-400 hover:border-gray-500 py-8 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline' %>
    <%= f.submit t('helpers.submit.shop.update_status') %>
  </div>
<% end %>
