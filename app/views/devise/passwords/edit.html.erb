<div class="hero min-h-screen bg-base-200">
  <div class="hero-content flex-col lg:flex-row-reverse">
    <div class="text-center lg:text-left">
      <h2 class="text-5xl font-bold">RESTIME</h2>
      <p class="py-6">預約放鬆，今天開始 <br> Start today, your restime</p>
    </div>
    <div class="card shrink-0 w-full max-w-sm shadow-2xl bg-base-100 py-8">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, class: 'card-body') do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-control w-52 m-auto">
          <div class="mb-2">
            <%= f.label :password, t('member.password'), class: "label-text text-lg" %>
            <% if @minimum_password_length %>
              <span class='text-sm'>(<%= t('member.password_min_length', min_length: @minimum_password_length) %>)</span>
            <% end %>
          </div>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input input-bordered w-52 text-sm px-2 py-3" %>
        </div>

        <div class="form-control w-52 m-auto mt-2">
          <%= f.label :password_confirmation, t('member.password_confirmation'), class: "label-text text-lg" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-52 text-sm px-2 py-3 mb-4" %>
        </div>

        <div class="form-control w-52 m-auto mt-2">
          <%= f.submit t('member.change_my_password'), class: "input input-bordered w-52 text-sm px-2 py-3" %>
        </div>
      <% end %>

      <div class="form-control mt-4 w-52 m-auto px-8">
        <%= link_to t("member.log_in"), new_session_path(resource_name), class: "btn btn-primary " %>
        <%= link_to t("member.sign_up"), new_registration_path(resource_name), class: "btn btn-primary mt-2" %>
      </div>
      <div class="mt-2 w-52 m-auto px-8">
        <%= button_to t("member.sign_in_with_google_oauth2"), user_google_oauth2_omniauth_authorize_path, { data: { turbo: false }, class: "btn btn-primary"} %>
      </div>
    </div>
  </div>
</div>
