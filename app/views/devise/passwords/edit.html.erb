<h2>Change your password</h2>
<div class=w-52>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-control">
    <div>
    <%= f.label :password, t('member.password'), class: "label-text text-lg"%>
    <% if @minimum_password_length %>
    <span class='text-sm'>(<%= t('member.password min length', min_length:@minimum_password_length) %>) <span>
    
    <% end %>
    </div>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password",class: "input
  input-bordered w-52 text-sm px-2 py-3" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, t('member.password confirmation'), class: "label-text text-lg" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-52 text-sm px-2 py-3 " %>
  </div>

  <div class="actions">
    <%= f.submit t('member.change my password'), class: "input input-bordered w-52 text-sm px-2 py-3" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>