
<%= form_for(@user, url: user_session_path(@user), data: { turbo: false }) do |f| %>
  <div class="field">
    <%= f.label :email, t('member.Email') %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, t('member.Password') %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, t('member.Remember') %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t('member.Log in') %>
  </div>
<% end %>

<%= render "devise/shared/links" do %>
  <%= link_to t('member.Signup'), new_registration_path(resource_name) %><br />
  <%= link_to t('member.Forgot your Password'), new_password_path(resource_name) %><br />
  <%= link_to t('member.sign_in_with_google_oauth2'), user_google_oauth2_omniauth_authorize_path %>
<% end %>
