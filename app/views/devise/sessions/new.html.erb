<div class=w-52>
<%= form_for(@user, url: user_session_path(@user), data: { turbo: false }) do |f| %>

  <div class="form-control">
  <%= f.label :email, t('member.Email'), class: "label-text text-lg" %>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-52 text-sm px-2 py-3" %>
</div>


<div class="form-control">
  <%= f.label :password, t('member.Password'), class: "label-text text-lg" %>
  <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered w-52 text-sm px-2 py-3" %>
</div>
  

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, t('member.Remember') %>
    </div>
  <% end %>

<div class="actions">
  <%= f.submit t('member.Log in'), class: "input input-bordered w-52 text-sm px-2 py-3" %>
</div>
<% end %>



  <%= render "devise/shared/links" %>
</div>