<div class="hero min-h-screen bg-base-200">
  <div class="hero-content flex-col lg:flex-row-reverse">
    <div class="text-center lg:text-left">
      <h2 class="text-5xl font-bold">RESTIME</h2>
      <p class="py-6">預約放鬆，今天開始<br>Start today, your restime.</p>
    </div>
    <div class="card shrink-0 w-full max-w-sm shadow-2xl bg-base-100 py-8">
      <div class="text-center">
        <h2 class="inline-block"><%= resource_name.to_s.humanize %></h2>
        <div class="badge badge-primary inline-block"><%= @user.email %></div>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, class: 'card-body') do |f| %>
        <% if resource.errors.any? %>
          <p><%= t('member.check_again') %></p>
        <% end %>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <%= resource.unconfirmed_email %>
        <% end %>
        <div class="form-control w-52 m-auto">
          <div>
            <%= f.label :password, t('member.password'), class: "label-text text-lg" %>
            <% if @minimum_password_length %>
              <span class="text-sm">( <%= t('member.password_min_length', min_length: @minimum_password_length) %> )</span>
            <% end %>
          </div>
          <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered" %>
        </div>  
        <div class="form-control w-52 m-auto">
          <%= f.label :confirmation, t('member.confirmation'), class: "label" %> 
          <%= f.password_field :confirmation, autocomplete: "new-password", class: "input input-bordered w-52 text-sm px-2 py-3 " %>
        </div>
        <div class="form-control w-52 m-auto">
          <%= f.label :current, t('member.current'), class: "label" %>
          <%= f.password_field :current, autocomplete: "current", class: "input input-bordered w-52 text-sm px-2 mb-4 " %>
        </div>
        <div class="actions w-52 m-auto mb-2">
          <%= f.submit t('member.update'), class: "btn btn-primary w-52 m-auto mb-4" %>
          <%= link_to t('member.back'), :back, class: "btn btn-primary w-52 mb-2 px-4" %>   
        </div>  
      <% end %>
    </div>
  </div>
</div>
