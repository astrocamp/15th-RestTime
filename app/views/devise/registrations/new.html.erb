<div class="w-52">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<div class="form-control ">
  <%= f.label :email, t('member.email'), class: "label-text text-lg" %>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-52 text-sm px-2 py-3 " %>
</div>

<div class="form-control">
  <div>
    <%= f.label :password, t('member.password'), class: "label-text text-lg" %>
    <% if @minimum_password_length %>
    <span class="text-sm">( <%= t('member.password min length', min_length:
      @minimum_password_length) %> )</span>
    <% end %>
  </div>
  <%= f.password_field :password, autocomplete: "new-password", class: "input
  input-bordered w-52 text-sm px-2 py-3" %>
</div>

<div class="form-control">
  <%= f.label :password_confirmation, t('member.password confirmation'), class: "label-text text-lg" %>
  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-52 text-sm px-2 py-3 " %>
</div>

  <div class="field">
    <%= f.label :role, t('member.role') %><br />
    <%= f.select :role, options_for_select([[t('member.general'), 'general'], [t('member.vendor'), 'vendor']]) %>
  </div>
  

  <div class="actions">
    <%= f.submit t('member.Sign up') %>
  </div>
    <ul class="p-2 shadow bg-base-100 rounded-box w-52">

      <li><%= f.submit t('member.Sign up'), class: "btn btn-outline btn-success w-full" %></li>

      <li><%= link_to t('member.Log in'), new_session_path(resource_name), class: "btn btn-outline btn-success" %></li>

    
      <li><%= link_to t('member.sign_in_with_google_oauth2'), omniauth_authorize_path(resource_name, :google_oauth2), class: "btn btn-outline btn-success" %></li>
    </ul>

  
<div class="actions">
    <%= f.submit t('member.sign up'), class: "btn btn-outline btn-success w-52" %>
  </div>
<% end %>
  <%= render 'devise/shared/links' %>
</div>





