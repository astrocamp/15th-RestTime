
<h1><%= @product.title %></h1>
  <%= link_to "編輯商品", edit_product_path, class: 'ink-btn' %>
  <%= link_to '刪除商品', product_path(@product), class: 'ink-btn ink-btn-danger', data: {
   turbo_method: 'delete',
   turbo_confirm: '確認刪除？'
 } %>


<h3>售價:<%= @product.price %>元</h3>

<p>描述:<%= simple_format(@product.description) %></p>

<section>
  <h3 class="text-xl">評論</h3>
  <%= form_with(model: @comment,
                url: product_comments_path(@product), 
                data: { turbo: false}) do |form|%>
    <%= form.text_area :content, class: 'input-field' %>
      <%= form.submit '新增評論', class: 'btn'%>
  <% end %>
  <ul>
  <% @comments.each do |comment|%>
    <li><%= comment.content %></li>
  <% end %>
  </ul>
</section>