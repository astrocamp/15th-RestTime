<% if product.errors.any? %>
  <section class="p-4 bg-rose-600 text-white p-4">
    <ul>
    <% product.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </section>
<% end %>

<%= form_with model: product,
              data: { turbo: false } do |form| %>

    <div>
    <%= form.label :title, t('form.title') %>
    <%= form.text_field :title, class: 'border-2 border-black' %>
  </div>
  
  <div>
    <%= form.label :cover, t('form.cover') %>
    <%= form.file_field :cover, class:'input-field' %>
  </div>
  <div>
    <%= form.label :price, t('form.price') %>
    <%= form.number_field :price, class: 'border-2 border-black', min: 0 %>
  </div>

  <div>
    <%= form.label :service_min, t('form.service_min') %>
    <%= form.number_field :service_min, class: 'border-2 border-black', min: 0 %>
  </div>

  <div>
    <%= form.label :description, t('form.description') %>
    <%= form.text_area :description, class: 'border-2 border-black' %>
  </div>


  <div>
    <%= form.label :onsale, t('form.onsale') %>
    <%= form.check_box :onsale, class: 'border-2 border-black', min: 0 %>
  </div>


  <div>
    <%= form.submit t('form.create'), class: 'bg-rose-700 text-white px-3 py-2' %>
  </div>

<% end %>