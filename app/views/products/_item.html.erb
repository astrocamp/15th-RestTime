<div class="card w-72 h-72 shadow-xl bg-slate-50">
        <%= link_to edit_product_path(product) do %>
        <figure class="h-44 w-90 rounded-t-xl">
          <%= product_cover(product) %>
        </figure>
      <% end %>
    <div class="card-body">
      <div class="card-title">
        <%= link_to product.title, edit_product_path(product) %>
      </div>

      <span>NT$ <%= product.price.to_i %></span>
    </div>
</div>