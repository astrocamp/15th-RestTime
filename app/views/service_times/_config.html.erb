<div>
  <%= config_field.hidden_field :id %>
  <div class="flex items-center ">
    <div>
      <%= config_field.label :day_of_week, 
              t(config.day_of_week, scope: [:service_times]), 
              class: 'label content-center' %>
      <%= config_field.hidden_field :day_of_week %>
    </div>
    <div class="flex items-center ml-4">
      <%= config_field.label t 'service_times.off_day', class: 'label' %>
      <%= config_field.check_box :off_day, class: 'toggle toggle-error' %>
    </div>
  </div>
  <section class="grid gap-x-4 content-center">
    <div class="flex items-center">
      <%= config_field.label :open_time, t('service_times.open_time'), class: 'label' %>
      <%= config_field.text_field :open_time,
                            data: {
                              controller: 'timepicker',
                              time: config.open_time&.then { |t| l(t, format: :h24_short) }, 
                            },
                            class: 'input input-bordered input-sm max-w-xs' %>
    </div>
    <div class="flex items-center">
      <%= config_field.label t('service_times.close_time'), class: 'label' %>
      <%= config_field.text_field :close_time,
                            data: {
                              controller: 'timepicker',
                              time: config.close_time&.then { |t| l(t, format: :h24_short) }
                            },
                            class: 'input input-bordered input-sm max-w-xs' %>
    </div>
  </section>
</div>